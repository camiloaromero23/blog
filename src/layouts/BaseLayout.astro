---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import type { BaseLayoutProps as Props } from './BaseLayout.interface';
import { Routes } from '../enums';
import BaseHead from '../components/BaseHead.astro';

const {
  current = Routes.HOME,
  title = 'My Blog',
  description = "Camilo's Blog",
} = Astro.props;
---

<!-- TODO: Check what is the best approach --><!-- <html lang="en"> -->
<html lang="en" class="dark">
  <head>
    <BaseHead title={title} description={description} />
    <style>
      * {
        box-sizing: border-box;
        font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI',
          Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue',
          sans-serif;
      }
      html {
        @apply h-screen w-screen;
      }
      body {
        @apply justify-center bg-white dark:bg-blog_blue-500 dark:text-white;
      }
      main {
        @apply relative my-0 mx-auto box-border flex w-full flex-1 flex-col py-4 px-8;
      }
    </style>
  </head>

  <body>
    <div class="flex justify-center">
      <div class="flex min-h-screen w-full flex-col sm:w-2/3">
        <Header current={current} />
        <main>
          <slot />
        </main>
        <Footer />
      </div>
    </div>
  </body>
</html>
