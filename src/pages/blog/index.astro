---
import { getCollection } from "astro:content";
import { Routes } from "../../enums";
import BaseLayout from "../../layouts/BaseLayout.astro";
import type { BaseLayoutProps } from "../../layouts/BaseLayout.interface";

const blogPosts = await getCollection("blog");

const baseLayoutValues: BaseLayoutProps = {
  current: Routes.BLOG,
  title: "Blog",
};
---

<BaseLayout {...baseLayoutValues}>
  <h1 class="text-4xl mb-8">Posts</h1>
  {blogPosts.map((blog) => <h2 class="text-2xl"><a href={`/blog/${blog.slug}`}>{blog.data.title}</a></h2>)}
</BaseLayout>
